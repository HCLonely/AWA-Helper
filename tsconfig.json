{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "declaration": false,
    "declarationMap": false,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "es2021",
    "baseUrl": "./",
    "allowJs": true,
    "downlevelIteration":true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/DailyQuestUS.ts",
    "src/SteamQuestSU.ts"
  ]
}
